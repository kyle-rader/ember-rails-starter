{
    "name": "ember-rails-starter",
    "license": "MIT",
    "engines": {
        "node": "14.15.5",
        "yarn": "1.22.5"
    },
    "scripts": {
        "prebuild": "yarn --cwd client install",
        "build": "yarn prebuild && yarn --cwd client build",
        "deploy": "cp -a client/dist/. public/",
        "heroku-prebuild": "yarn global add ember-cli",
        "heroku-postbuild": "yarn build && yarn deploy"
    }
}